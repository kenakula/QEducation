{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "rootDirs": [
      "src"
    ],
    "paths": {
      "app": [
        "./app"
      ],
      "assets": [
        "./assets"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "outDir": "dist/built"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}